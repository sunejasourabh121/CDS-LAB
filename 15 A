#include <iostream>
using namespace std;

int fact(int n) {
    if (n <= 1) {
        return 1;
    } else {
        return n * fact(n - 1);  // Recursive case
    }
}

int main() {
    int number;
    cout << "Enter number: ";
    cin >> number;

    int result = fact(number);
    cout << number << "! = " << result << endl;

    return 0;
}
